<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jdelgadoS5A.Views.vHome"
             Title="vHome">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label 
        Text="Semana 5 SQLite"
        FontSize="20"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
            <Label Text="By: Jimmy Delgado"
                   FontSize="15"
                   HorizontalOptions="Center"/>

            <Entry
                x:Name="txtNombre"
                Placeholder="Ingrese el Nombre"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnInsertar"
                        Text="Insertar"
                        Clicked="btnInsertar_Clicked"
                        Grid.Row="0"
                        Grid.Column="0"/>

                <Label x:Name="lblInfo"
                       FontSize="18"
                       TextColor="Red"
                       Grid.Row="1"
                       Grid.Column="0"
                       HorizontalTextAlignment="Center"/>

                <Button x:Name="btnListar"
                        Text="Listar"
                        Clicked="btnListar_Clicked"
                        Grid.Row="2"
                        Grid.Column="0"
                        BackgroundColor="Gray"/>

                <CollectionView x:Name="listPersonas"
                                Grid.Row="3">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding Id}"
                                       Grid.Column="0"/>

                                <Label Text="{Binding Nombre}"
                                       Grid.Column="1"/>
                                
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    
                </CollectionView>
                
               


            </Grid>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>